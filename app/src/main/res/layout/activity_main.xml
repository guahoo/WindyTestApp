<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indigo"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_input_it"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_button"

        android:fontFamily="@font/montserrat_black"
        android:hint="Введите число"
        android:inputType="number"
        android:paddingHorizontal="20dp"
        android:textAllCaps="true"
        android:textColor="@color/neon"
        android:textColorHint="@color/neon"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical"

        app:layout_constraintTop_toBottomOf="@id/tv_show_result"
        tools:layout_editor_absoluteX="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_calc_result"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_button"
        android:fontFamily="@font/montserrat_black"
        android:paddingHorizontal="20dp"
        android:text="РАССЧИТАТЬ ЗНАЧЕНИЕ"
        android:textAlignment="center"
        android:textColor="@color/neon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_input_it" />

    <TextView

        android:id="@+id/tv_show_result"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Здесь будет результат"

        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="20dp"


        android:fontFamily="@font/montserrat_black"

        android:inputType="number"
        android:textSize="20dp"
        android:paddingHorizontal="20dp"
        android:textAllCaps="true"
        android:textColor="@color/neon"
        android:textColorHint="@color/neon"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>